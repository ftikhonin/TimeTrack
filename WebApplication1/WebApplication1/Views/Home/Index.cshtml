@model IEnumerable<WebApplication1.Models.Work>
@{
    ViewData["Title"] = "Task List";
}
<h3>Task List</h3>
<body>
    <table class="table-condensed">
        <tr>
            <td>Номер</td>
            <td>Ссылка</td>
            <td>Описание</td>
            <td></td>
        </tr>
        @foreach (var work in Model)
        {
            <tr>
                <td>@work.Id</td>
                <td><a href=@work.Url>@work.Url</a></td>
                <td>@work.Description</td>
                <td><a href="~/Home/Start/@work.Id">Старт</a></td>
            </tr>
        }
    </table>
</body>